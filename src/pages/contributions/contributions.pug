// contributions index page
u-layout-page.u-page-index

  template(slot="meta")
    q-collapsible.u-filters(:opened="$q.platform.is.desktop", icon="mdi-filter" label="Filters")
      div.row.row-filters

        div.col-md-12

            q-field.field-order(label="Order by", orientation="vertical")
              q-btn-dropdown(:label='orderBy', flat, dense, no-ripple)
                // dropdown content
                q-list(link='')
                  q-item(v-for="option in orderOptions", :key="option.value", :to="{ name: 'posts.' + option.value, params: { category }  }")
                    q-item-main
                      q-item-tile(label='') {{ option.label }}



      div.row.row-filters
        div.col-md-12
          q-field(label="Categories", orientation="vertical")

            q-list.full-width.categories-list(no-border, multiline)


              q-item(:to="{ name: ('posts.' + orderBy), params: { category: 'all' } }", :exact="true")
                q-item-side(style="min-width: 20px")
                  q-icon.ut-utopian
                q-item-main
                  .q-item-label All
              template(v-for="category in categoryOptions", separator)
                q-item(:to="{ name: ('posts.' + orderBy), params: { category: category.value } }")
                  q-item-side(style="min-width: 20px")
                    q-icon(:class="'ut-' + category.value")

                  q-item-main
                    .q-item-label
                      | {{ $t('utopian.categories.' + category.value) }}


  template(slot="main")
    u-contribution-list(:category="currentCategory", :orderBy="orderBy")

